@model List<AESApplications.Models.QuestionModel>

@{
    ViewBag.Title = "Questionnaire";
    ViewBag.LeftButtonLink = "";
    ViewBag.RightButtonLink = "";
}

<h2>@ViewBag.Title</h2>

<div>
    <section id="loginForm">
        @using (Html.BeginForm("CheckQuestions", "Questionnaire", FormMethod.Post))
        { 
            <div class="form-group">
                @for (int i = 0; i < Model.Count; i++ )
                {
                    <p>@Model[i].question</p>
                    @Html.HiddenFor(model => model[i].correctAnswer, Model[i].correctAnswer);
                    @Html.HiddenFor(model => model[i].question, Model[i].question);
                    @Html.Label("Yes");
                    @Html.RadioButtonFor(model => model[i].response, "y");
                    @Html.Label("No");
                    @Html.RadioButtonFor(model => model[i].response, "n");
                    <br />
                    <br />
                }
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Apply" class="btn btn-default" />
                </div>
            </div>
        }
    </section>

</div>