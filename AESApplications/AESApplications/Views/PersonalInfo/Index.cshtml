@model AESApplications.Models.PersonalInfoModel

@{
    ViewBag.Title = "Personal Info";
    ViewBag.LeftButtonLink = "../Home/Welcome";
    ViewBag.RightButtonLink = "";
}

<h2>@ViewBag.Title</h2>

<section>
    @using (Html.BeginForm("Index", "PersonalInfo", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div>
            @Html.LabelFor(m => m.name_first)
            @Html.TextBoxFor(m => m.name_first)
            @Html.ValidationMessageFor(m => m.name_first)
        </div>
        <div>
            @Html.LabelFor(m => m.name_middle)
            @Html.TextBoxFor(m => m.name_middle)
            @Html.ValidationMessageFor(m => m.name_middle)
        </div>
        <div>
            @Html.LabelFor(m => m.name_last)
            @Html.TextBoxFor(m => m.name_last)
            @Html.ValidationMessageFor(m => m.name_last)
        </div>
        <div>
            @Html.LabelFor(m => m.name_alt)
            @Html.TextBoxFor(m => m.name_alt)
            @Html.ValidationMessageFor(m => m.name_alt)
        </div>
        <div>
            @Html.LabelFor(m => m.street)
            @Html.TextBoxFor(m => m.street)
            @Html.ValidationMessageFor(m => m.street)
        </div>
        <div>
            @Html.LabelFor(m => m.city)
            @Html.TextBoxFor(m => m.city)
            @Html.ValidationMessageFor(m => m.city)
        </div>
        <div>
            @Html.LabelFor(m => m.state)
            @Html.TextBoxFor(m => m.state)
            @Html.ValidationMessageFor(m => m.state)
        </div>
        <div>
            @Html.LabelFor(m => m.zip)
            @Html.TextBoxFor(m => m.zip)
            @Html.ValidationMessageFor(m => m.zip)
        </div>
        <div>
            @Html.LabelFor(m => m.phone_num)
            @Html.TextBoxFor(m => m.phone_num)
            @Html.ValidationMessageFor(m => m.phone_num)
        </div>
        <div>
            @Html.LabelFor(m => m.ssn)
            @Html.TextBoxFor(m => m.ssn)
            @Html.ValidationMessageFor(m => m.ssn)
        </div>
        <br/>
        <br/>
        <br/>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    }
</section>