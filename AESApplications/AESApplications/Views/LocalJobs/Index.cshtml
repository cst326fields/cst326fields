@model List<AESApplications.Test.Job>

@{
    ViewBag.Title = "Local Jobs";
    ViewBag.LeftButtonLink = "";
    ViewBag.RightButtonLink = "";
}

<h2>@ViewBag.Title</h2>

<div>
    <section id="loginForm">
        @using (Html.BeginForm("Index", "Questionnaire", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @foreach (AESApplications.Test.Job job in Model)
                {
                    <p>@Html.CheckBox(job.jobId.ToString())  Position: @job.title      Location: @job.location </p>
                    <p>Description @job.description</p>
                    <p>Hours: @job.hours</p>
                    <p>Education Requirement: @job.education</p>
                    <p>Responsibilities and requirements: @job.requirements</p>
                    <br/>
                    <br/>                                                            
                }
            </div>
            <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Apply" class="btn btn-default" />
                    </div>
            </div>
        }
    </section>

</div>